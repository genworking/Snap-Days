<% following_user.each do | following_user | %>
  <div class="profile-wrap">
    <div class="row">
      <!-- プロフィールアイコン画像 -->
      <div class="col-md-4 text-center">
        <%= link_to image_tag(avatar_url(following_user), class: "round-img"), user_path(following_user) %>
      </div>
      <!-- プロフィール情報 -->
      <div class="col-md-8">
        <div class="row">
          <div class="profile-info">
            <ul class="profile-username">
              <li>
                <a href="<%= user_path(following_user) %>"
                   class="username f-black"><%= following_user.username %></a>
              </li>
              <li>
                <a>投稿<span class="f-bold"><%= following_user.posts.count %></span>件</a>
                <a><%= render 'users/following_list_count', user: @user %></a>
              </li>
              <li class="fullname"><%= following_user.name %></li>
              <li>
                <a class="f-black introduction-text"><%= simple_format(following_user.introduction) %></a>
              </li>
              <li>
                <% if following_user.website.present? %>
                  <a class="website-icon"></a>
                  <a href="<%= following_user.website %>"
                     class="f-black website-address"
                     target="_blank"><%= following_user.website %></a>
                <% end %>
              </li>
            </ul>
            <!-- フォローボタン -->
            <div class="profile-follow-btn">
              <a class="follow-btn"><%= render 'users/follow_form' %></a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <hr>
<% end %>
