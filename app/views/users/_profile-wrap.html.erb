<div class="profile-wrap">
  <div class="row">
    <div class="col-md-4 text-center">
      <%= image_tag avatar_url(user), class: "round-img" %>
    </div>
    <div class="col-md-8">
      <div class="row">
        <div class="profile-info">
          <div class="profile-username">
            <p class="username"><%= user.username %></p>
            <p class="fullname"><%= user.name %></p>
            <a class="follow-count">
              <%= render 'stats' %><!-- フォローカウント -->
            </a>
          </div>
          <div class="profile-follow-btn">
            <a class="follow-btn">
              <%= render 'follow_form' %><!-- フォローボタン -->
            </a>
            <% if user == current_user %>
              <a class="edit-btn">
                <%= link_to "プロフィールを編集", edit_user_registration_path, class: "btn btn-outline-dark edit-profile-btn" %>
                <button type="button" class="setting" data-toggle="modal" data-target="#exampleModal"></button>
              </a>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
