<%= render 'users/profile_wrap', user: @user %>
<div class="introduction-info">
  <%= @user.introduction %>
</div>
<% if @user == current_user %>
  <%= render 'users/favorite_list', favorite_list: @favorite_list %>
<% end %>
<% if @user != current_user %>
  <%= render 'users/post_list', user: @user, post_list: @post_list %>
<% end %>
