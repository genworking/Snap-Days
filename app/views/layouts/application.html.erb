<!DOCTYPE html>
<html>
  <head>
    <%= render 'layouts/haed' %>
  </head>
  <body>
    <div id="wrapper">
      <%= render 'partial/navbar' if current_user %>
      <% if flash[:notice] %>
        <div class="alert alert-info">
          <%= flash[:notice] %>
        </div>
      <% end %>
      <% if flash[:alert] %>
        <div class="alert alert-danger">
          <%= flash[:alert] %>
        </div>
      <% end %>
      <div class="container">
        <%= yield %>
      </div>
      <%= render 'partial/footer' %>
    </div>
  </body>
</html>
